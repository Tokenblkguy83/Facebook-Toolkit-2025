{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": true
    }
  },
  "tasks": {
    "test": "deno test -A",
    "lint": "deno lint",
    "fmt": "deno fmt"
  }
}
